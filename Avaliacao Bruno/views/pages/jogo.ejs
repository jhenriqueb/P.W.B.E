<div class="jogo-page text-center mt-5">
  <h2 class="mb-4">Pergunta:</h2>
  <div class="card mx-auto" style="max-width: 600px;">
    <div class="card-body">
      <h3 class="card-title mb-4"><%= pergunta.pergunta %></h3>
      <form action="/verificar" method="POST" class="d-grid gap-3">
        <input type="hidden" name="perguntaId" value="<%= pergunta.id %>">
        <div class="form-check text-start">
          <input class="form-check-input" type="radio" name="resposta" value="1" id="alt1" required>
          <label class="form-check-label" for="alt1"><%= pergunta.alternativa1 %></label>
        </div>
        <div class="form-check text-start">
          <input class="form-check-input" type="radio" name="resposta" value="2" id="alt2">
          <label class="form-check-label" for="alt2"><%= pergunta.alternativa2 %></label>
        </div>
        <div class="form-check text-start">
          <input class="form-check-input" type="radio" name="resposta" value="3" id="alt3">
          <label class="form-check-label" for="alt3"><%= pergunta.alternativa3 %></label>
        </div>
        <button type="submit" class="btn btn-primary btn-lg mt-4">Responder</button>
      </form>
    </div>
  </div>
</div>

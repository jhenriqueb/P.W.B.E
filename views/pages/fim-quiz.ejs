<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card">
                <div class="card-header bg-success text-white">
                    <h3 class="text-center mb-0">Quiz Finalizado!</h3>
                </div>
                <div class="card-body">
                    <div class="text-center mb-4">
                        <h4>Resultado Final</h4>
                        <div class="row mt-4">
                            <div class="col-md-6">
                                <div class="card bg-light">
                                    <div class="card-body">
                                        <h5>Acertos</h5>
                                        <h2 class="text-success"><%= estatisticas.acertos %></h2>
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="card bg-light">
                                    <div class="card-body">
                                        <h5>Erros</h5>
                                        <h2 class="text-danger"><%= estatisticas.erros %></h2>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="mt-4">
                            <h5>Taxa de Acerto</h5>
                            <h3 class="text-primary">
                                <%= ((estatisticas.acertos / (estatisticas.acertos + estatisticas.erros)) * 100).toFixed(1) %>%
                            </h3>
                        </div>
                    </div>
                    <div class="text-center mt-4">
                        <form action="/reiniciar-jogo" method="POST">
                            <button type="submit" class="btn btn-primary btn-lg">
                                Jogar Novamente
                            </button>
                        </form>
                        <a href="/" class="btn btn-secondary btn-lg mt-2">
                            Voltar ao In√≠cio
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div> 
<div class="admin-page">
  <h2 class="text-center mb-4">Administração de Perguntas</h2>

  <div class="card mb-4">
    <div class="card-header">
      <h3 class="card-title h5 mb-0">Adicionar Nova Pergunta</h3>
    </div>
    <div class="card-body">
      <form action="/admin/adicionar" method="POST">
        <div class="mb-3">
          <label for="pergunta" class="form-label">Pergunta:</label>
          <input type="text" class="form-control" id="pergunta" name="pergunta" required>
        </div>
        <div class="mb-3">
          <label for="alternativa1" class="form-label">Alternativa 1:</label>
          <input type="text" class="form-control" id="alternativa1" name="alternativa1" required>
        </div>
        <div class="mb-3">
          <label for="alternativa2" class="form-label">Alternativa 2:</label>
          <input type="text" class="form-control" id="alternativa2" name="alternativa2" required>
        </div>
        <div class="mb-3">
          <label for="alternativa3" class="form-label">Alternativa 3:</label>
          <input type="text" class="form-control" id="alternativa3" name="alternativa3" required>
        </div>
        <div class="mb-3">
          <label for="correta" class="form-label">Alternativa Correta:</label>
          <select class="form-select" id="correta" name="correta" required>
            <option value="1">Alternativa 1</option>
            <option value="2">Alternativa 2</option>
            <option value="3">Alternativa 3</option>
          </select>
        </div>
        <button type="submit" class="btn btn-primary">Adicionar Pergunta</button>
      </form>
    </div>
  </div>

  <div class="card">
    <div class="card-header">
      <h3 class="card-title h5 mb-0">Perguntas Existentes</h3>
    </div>
    <div class="card-body">
      <% if (!perguntas || perguntas.length === 0) { %>
        <p class="text-center">Nenhuma pergunta cadastrada.</p>
      <% } else { %>
        <div class="table-responsive">
          <table class="table table-striped">
            <thead>
              <tr>
                <th>Pergunta</th>
                <th>Alternativas</th>
                <th>Correta</th>
                <th>Ações</th>
              </tr>
            </thead>
            <tbody>
              <% perguntas.forEach(pergunta => { %>
                <tr>
                  <td><%= pergunta.question %></td>
                  <td>
                    <ol class="mb-0">
                      <% pergunta.options.forEach((option, index) => { %>
                        <li><%= option %></li>
                      <% }) %>
                    </ol>
                  </td>
                  <td><%= pergunta.correctAnswer %></td>
                  <td>
                    <form action="/admin/deletar/<%= pergunta.id %>" method="POST" class="d-inline">
                      <button type="submit" class="btn btn-danger btn-sm" onclick="return confirm('Tem certeza que deseja excluir esta pergunta?')">Excluir</button>
                    </form>
                    <button type="button" class="btn btn-primary btn-sm ms-2" 
                            data-bs-toggle="modal" 
                            data-bs-target="#editarModal<%= pergunta.id %>">
                      Editar
                    </button>

                    <!-- Modal de Edição -->
                    <div class="modal fade" id="editarModal<%= pergunta.id %>" tabindex="-1" aria-labelledby="editarModalLabel<%= pergunta.id %>" aria-hidden="true">
                      <div class="modal-dialog">
                        <div class="modal-content">
                          <div class="modal-header">
                            <h5 class="modal-title" id="editarModalLabel<%= pergunta.id %>">Editar Pergunta</h5>
                            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                          </div>
                          <div class="modal-body">
                            <form action="/admin/editar/<%= pergunta.id %>" method="POST" id="formEditar<%= pergunta.id %>">
                              <div class="mb-3">
                                <label for="pergunta<%= pergunta.id %>" class="form-label">Pergunta:</label>
                                <input type="text" class="form-control" id="pergunta<%= pergunta.id %>" name="pergunta" value="<%= pergunta.question %>" required>
                              </div>
                              <% pergunta.options.forEach((option, index) => { %>
                                <div class="mb-3">
                                  <label for="alternativa<%= index + 1 %><%= pergunta.id %>" class="form-label">Alternativa <%= index + 1 %>:</label>
                                  <input type="text" class="form-control" 
                                         id="alternativa<%= index + 1 %><%= pergunta.id %>" 
                                         name="alternativa<%= index + 1 %>" 
                                         value="<%= option %>" required>
                                </div>
                              <% }) %>
                              <div class="mb-3">
                                <label for="correta<%= pergunta.id %>" class="form-label">Alternativa Correta:</label>
                                <select class="form-select" id="correta<%= pergunta.id %>" name="correta" required>
                                  <% pergunta.options.forEach((option, index) => { %>
                                    <option value="<%= index + 1 %>" <%= option === pergunta.correctAnswer ? 'selected' : '' %>>
                                      Alternativa <%= index + 1 %>
                                    </option>
                                  <% }) %>
                                </select>
                              </div>
                            </form>
                          </div>
                          <div class="modal-footer">
                            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancelar</button>
                            <button type="submit" form="formEditar<%= pergunta.id %>" class="btn btn-primary">Salvar Alterações</button>
                          </div>
                        </div>
                      </div>
                    </div>
                  </td>
                </tr>
              <% }) %>
            </tbody>
          </table>
        </div>
      <% } %>
    </div>
  </div>
</div>
